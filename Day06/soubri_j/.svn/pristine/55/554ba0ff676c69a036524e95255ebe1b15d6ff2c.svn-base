#include <stdlib.h>
int my_strlen(char *str);

char *my_capitalize(char *str)
{
    char *cap_str = NULL;
    int str_len = 0;

    if (str != NULL) {
        str_len = my_strlen(str);
        cap_str = malloc(sizeof(char) * str_len);
        for (int i = 0; i < str_len; ++i) {
            if (str[i] >= 97 && str[i] <= 122) {
                cap_str[i] = str[i] - 32;
            }
        }
    }

    return cap_str;
}