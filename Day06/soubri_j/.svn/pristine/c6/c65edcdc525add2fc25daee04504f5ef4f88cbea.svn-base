#include <stdlib.h>
int my_strlen(char *str);

char *my_capitalize(char *str)
{
    char *cap_str = NULL;
    int str_len = 0;
    int cpt = 0;

    if (str != NULL) {
        str_len = my_strlen(str);
        cap_str = malloc(sizeof(char) * str_len);
        if (cap_str != NULL) {
            while (str[cpt] != '\0') {
                if (str[cpt] >= 97 && str[cpt] <= 122) {
                    cap_str[cpt] = str[cpt] - 32;
                } else {
                    cap_str[cpt] = str[cpt];
                }
                ++cpt;
            }
            cap_str[cpt] = '\0';
        }
    }
    if (cap_str == NULL) {
        cap_str = malloc(sizeof(char));
        cap_str = "\0";
    }

    return cap_str;
}