CFLAGS			= -Wall -Wextra -Werror -std=c99

CC				= gcc

RM				= rm -f

PROGRAM_NAME	= aff_up

SRC				= main.c \
				  my_capitalize.c \
				  my_putchar.c \
				  my_putstr.c \
				  my_strlen.c

OBJ				= $(SRC:.c=.o)

all: $(PROGRAM_NAME)

$(PROGRAM_NAME) : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(PROGRAM_NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(OBJ)

re: fclean all

.PHONY: all $(PROGRAM_NAME) clean fclean re