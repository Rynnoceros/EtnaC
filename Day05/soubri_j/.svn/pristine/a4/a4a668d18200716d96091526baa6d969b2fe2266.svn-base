int my_nbrlen(int n)
{
    int nb_char = 0;
    int cpt = 0;
    int is_neg = 0;

    if (n < 0) {
        is_neg = 1;
        n *= -1;
    }

    for (int power = 1; cpt <= n; ++power) {
        int current_pow = my_pow(10, power);
        for (; cpt < current_pow && cpt <= n; ++cpt) {
        }
        ++nb_char;
    }

    if (is_neg == 1)
        ++nb_char;

    return nb_char;
}

int my_pow(int n, int p)
{
    int powed_value = 1;
    if (p < 0)
        return 0;

    for (int i = 0; i < p; ++i) {
        powed_value *= n;
    }
    return powed_value;
}