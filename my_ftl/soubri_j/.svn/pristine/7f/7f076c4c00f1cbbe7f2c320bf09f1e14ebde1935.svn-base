CFLAGS				= -Wall -Wextra -Werror

CC					= gcc

CC_SDL				= -F/Library/Frameworks/SDL2.framework/Headers -framework SDL2

CC_SDL_IMAGE		= -F/Library/Frameworks/SDL2_image.framework/Headers -framework SDL2_image

CC_SDL_MIXER		= -F/Library/Frameworks/SDL2_mixer.framework/Headers -framework SDL2_mixer

RM					= rm -f

PROGRAM_NAME		= my_ftl

SRC					= main.c \
					  my_readline.c \
					  my_string.c \
					  air_shed.c \
					  container.c \
					  system_control.c \
					  system_repair.c \
					  stat.c \
					  enemy.c \
					  system_damage.c \
					  other_actions.c \
					  game_loop.c \
					  sdl_usage.c \
					  sdl_effects.c

OBJ					= $(SRC:.c=.o)

all: $(PROGRAM_NAME)
	

$(PROGRAM_NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(PROGRAM_NAME) $(CC_SDL) $(CC_SDL_IMAGE) \
		$(CC_SDL_MIXER)

clean: 
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(PROGRAM_NAME)

re: fclean all

.PHONY: all $(PROGRAM_NAME) clean fclean re