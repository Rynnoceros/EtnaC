CFLAGS					= -Wall -Wextra -Werror -std=c99
AR_RC					= ar rc
CC						= gcc
RM						= rm -f
LIB_NAME				= libnot_rp1.a
SRC						= my_putchar.c \
						my_putstr.c \
						my_strlen.c \
						my_putnbr.c \
						my_putnbr_func.c \
						character.c \
						inventory.c \
						map.c \
						interactions.c

OBJ						= $(SRC:.c=.o)

all: $(LIB_NAME)

$(LIB_NAME): $(OBJ)
	$(AR_RC) $(LIB_NAME) $(OBJ)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(LIB_NAME)

re: fclean all

.PHONY: all $(LIB_NAME) clean fclean re