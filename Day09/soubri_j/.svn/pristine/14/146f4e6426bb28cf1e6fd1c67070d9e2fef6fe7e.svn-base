**      Function which sorts the elements of the list in ascending order,
**      by comparing the data of two elements using a comparison function.
*/
#include <stdlib.h>
#include "my_list.h"

void my_sort_list(list_t **begin, int (*cmp)())
{
    list_t *ptr = NULL;
    list_t *ptr2 = NULL;
    list_t *save = NULL;
    list_t *save2 = NULL;

    if (begin != NULL && *begin != NULL) {
        ptr = malloc(sizeof(ptr));
        ptr2 = malloc(sizeof(ptr2));
        save = malloc(sizeof(save));
        save2 = malloc(sizeof(save2));
        if (ptr != NULL && ptr2 != NULL && save != NULL) {
            ptr = *begin; 
            save2 = ptr;
            while (ptr != NULL) {
                ptr2 = ptr->next;
                while (ptr2 != NULL) {
                    if (cmp(ptr->data, ptr2->data) > 0) {
                        if (ptr2->next != NULL) {
                            ptr->next = ptr2->next;
                        } else {
                            save->next = ptr2->next;
                        }
                        ptr2->next = ptr;
                        ptr = ptr2;
                        save2->next = ptr;
                    }
                    save = ptr2;
                    ptr2 = ptr2->next;
                }
                save2 = ptr;
                ptr = ptr->next;
            }
        }
    }
}